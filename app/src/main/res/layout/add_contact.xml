<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:orientation="vertical" android:layout_height="wrap_content">


    <TextView
            android:paddingStart="10dp"
            android:text="@string/add_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/change_contact_title" android:layout_weight="1"
            android:textStyle="bold"
    android:textSize="42sp"

    />
    <EditText

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:inputType="textPersonName"
            android:hint="@string/name_txtview"
            android:ems="10"
            android:id="@+id/name_add_contact"
            android:layout_weight="1" />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="@string/email_txtvw"
            android:id="@+id/email_add_contact"
            android:layout_weight="1"/>

